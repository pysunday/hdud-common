---
import ScrambleText from './ScrambleText.astro';

const { menus, pathname, type } = Astro.props;
---
{
  menus.map((link, idx) => {
    const isActive = link.isActive(pathname);
    return (
      <li class:list={[{
        'text-[#aaa]': !isActive,
        'text-[#333]': isActive,
        'dark:text-[#eee]': isActive,
      }]}>
        <a href={isActive ? 'javascript:null' : link.href} class="text-lg" astro-prefetch="true">
          {link.icon && <span
            class:list={[
              link.icon,
              {
                'max-lg:hidden': type !== 'small',
              }
            ]}
          />}
          {link.hasAnimate ? <ScrambleText text={link.label}/> : link.label}
        </a>
      </li>
    )
  })
}
